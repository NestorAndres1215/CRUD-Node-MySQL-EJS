    <style>
        .banner_img {
            width: 100%;
            height: 400px;
            object-fit: cover;
        }
        .img-tarjeta, .img-fluid {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 10px;
        }
        .tarjeta {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            margin-bottom: 24px;
            padding: 16px;
            transition: transform 0.2s;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
        .tarjeta:hover {
            transform: translateY(-5px) scale(1.03);
            box-shadow: 0 4px 16px rgba(11,107,197,0.15);
        }
        .cont-tarjeta {
            margin-top: 12px;
            text-align: center;
        }
        .fondo-tarjetas {
            background: #f8f9fa;
            border-radius: 16px;
            padding: 32px 16px;
            margin-bottom: 32px;
        }
        .container-map iframe {
            width: 100%;
            max-width: 1000px;
            height: 400px;
            border-radius: 12px;
            border: none;
        }
        @media (max-width: 768px) {
            .banner_img { height: 200px; }
            .img-tarjeta, .img-fluid { height: 120px; }
            .container-map iframe { height: 250px; }
        }
    </style>

